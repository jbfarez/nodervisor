<fieldset>
    <legend>New Host</legend>
    <input type="hidden" name="host[idHost]" value="0">
    <button type="button" id="" class="btn btn-labeled btn-danger pull-right remove-host" style="margin-top: -50px;"><span class="btn-label"><i class="glyphicon glyphicon-remove"></i></span><span class="btn-text">Delete Host</span></button>
    <div class="form-group">
        <label for="inputHostname">Name</label>
        <input type="text" class="form-control" id="inputHostname" name="host[Name]" placeholder="Custom name">
    </div>
    <div class="form-group">
        <label for="inputHosturl">Host</label>
        <input type="text" class="form-control" id="inputHosturl" name="host[Url]" placeholder="eg: http://(user:password@)localhost:9001">
    </div>
    <div class="form-group">
        <label for="inputHostrelatedLink">Related link</label>
        <input type="text" class="form-control" id="inputHostrelatedLink" name="host[RelatedLink]" placeholder="Documentation link (eg: wiki page)">
    </div>
    <hr>
</fieldset>
